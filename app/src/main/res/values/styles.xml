<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColorHint">@color/line</item>
    </style>


    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="appCompatStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
    </style>


    <style name="customCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="navigationStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/line</item>
    </style>

    <style name="myTimePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the title and text -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:divider">@color/white</item>
        <!-- Used for the background -->
    </style>

    <style name="ThemeSpinner" parent="android:Widget.ListView.DropDown">
        <item name="android:background">@drawable/spinner</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#b5878685</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MyPopupMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">#0F213F</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Translucent" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/line</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
